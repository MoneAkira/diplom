pipeline {
    parameters {
        choice choices: ['agent', 'master'], description: 'Select agent', name: 'agent'
    }
    agent {
        label any
    }
    tools {
        maven '3.8.6'
    }
    stages {
        stage('Build') {
            steps {
                dir('Jenkins/simple_app_project/calculator') {
                    sh "mvn -B -DskipTests clean package"
                }
            }
        }
        stage('Test') {
         steps {
            dir('Jenkins/simple_app_project/calculator') {
                sh "mvn test"
                }
            }
        }
    }
}